# SignalForge local development
# Copy to .env and fill in values

# App
APP_NAME=SignalForge
DEBUG=true

# Database (PostgreSQL)
# On macOS, Postgres often uses your username (not "postgres"). Example:
DATABASE_URL=postgresql://triciaballad@localhost:5432/signalforge_dev
# Or with password: postgresql://user:password@localhost:5432/signalforge_dev
# Or use individual vars:
# PGHOST=localhost
# PGPORT=5432
# PGUSER=triciaballad
# PGPASSWORD=
# PGDATABASE=signalforge_dev

# Security
SECRET_KEY=your-secret-key-change-in-production
INTERNAL_JOB_TOKEN=your-cron-secret-for-internal-endpoints

# LLM
LLM_PROVIDER=openai
LLM_API_KEY=your-openai-api-key
LLM_MODEL=gpt-4o-mini

# Briefing
BRIEFING_TIME=08:00
BRIEFING_EMAIL_ENABLED=false
